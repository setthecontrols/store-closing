
<div class="form-wrapper">
  <%= form_for user_post_path(id: to_param) do |f| %>
    <div class="form-group text-center">
      <%= f.label :name %><br>
      <%= f.text_field(:name) %>
    </div>
    <div class="form-group text-center">
    <%= f.label :image %>
    <%= f.file_field(:image) %>
  </div>
  <div class="form-group text-center">
    <%= f.submit 'Create New Post', class: "btn-success"  %>
  </div>
  <% end %>
  </div>
